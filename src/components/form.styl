.form
  box-shadow: $shadow-lg, $shadow-emboss
  padding: $padding * 4
  border-radius: $border-radius * 2
  margin-bottom: $margin
  &.is-inline
    .field
      display: flex

.field
  margin-bottom: ($margin * 2)
  &:last-child
    margin-bottom: 0

.field-label
  font-weight: $font-weight-semi-bold
  display: block
  margin-bottom: $margin
  margin-top: $margin

.field-text
  display: block
  font-size: 0.75em
  margin-bottom: $margin
  color: $dark
  // generate color modifiers
  for color in $modifiers-color
    $accent = lookup('$' + color)
    &.is-{color}
      color: $accent